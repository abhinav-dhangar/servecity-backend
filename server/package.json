{
  "name": "boilerplate_express",
  "version": "1.0.0",
  "description": "this is the boilerplate code for expressjs app in typescript ",
  "main": "src/index.ts",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "docker-dev": "nodemon -L index.ts",
    "dev": "npx concurrently \"npm run dev-watch \" \"npm run dev-start\"",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "dev-start": "nodemon --watch dist --exec \"node dist/index.js\"",
    "dev-watch": "tsc --watch"
  },
  "keywords": [
    "boilerplate",
    "express",
    "typescript"
  ],
  "author": "Abhinav Dhangar",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.83.0",
    "@upstash/redis": "^1.35.6",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "module-alias": "^2.2.3",
    "multer": "^2.0.2",
    "ts-node": "^10.9.2",
    "winston": "^3.13.0",
    "zod": "^4.1.13"
  },
  "_moduleAliases": {
    "@root": ".",
    "@src": "dist/src",
    "@utils": "dist/src/utils",
    "@configs": "dist/src/configs"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/winston": "^2.4.4",
    "nodemon": "^3.1.0",
    "typescript": "^5.4.5"
  }
}
